{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"css": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"graphql": {
		"formatter": {
			"enabled": true
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noImportantStyles": "off"
			},
			"style": {
				// TODO: Enable later
				"noDescendingSpecificity": "off"
			}
		}
	},
	"files": {
		"includes": ["source/**/*.css", "source/**/*.gql"]
	}
}
