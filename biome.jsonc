{
	"$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
	"css": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"graphql": {
		"formatter": {
			"enabled": true
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				// TODO: Enable later
				"noDescendingSpecificity": "off"
			}
		}
	},
	"files": {
		"includes": ["source/**/*.css", "source/**/*.gql"]
	}
}
