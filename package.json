{
	"private": true,
	"scripts": {
		"lint": "run-p --silent lint:*",
		"lint:js": "xo",
		"lint:css": "stylelint source/**/*.css",
		"lint-fix": "run-p --silent 'lint:* -- --fix'",
		"test": "run-p --silent test:js lint:* build",
		"test:js": "ava",
		"build": "webpack --mode=production",
		"watch": "webpack --mode=development --watch",
		"watch:firefox": "web-ext run --source-dir=distribution",
		"release:amo": "cd distribution && web-ext-submit",
		"release:cws": "cd distribution && webstore upload --auto-publish",
		"release": "run-s build prerelease:* release:*",
		"create-git-tag": "VER=$(utc-version) && git tag $VER -m $VER && git push origin $VER",
		"prerelease:source-url": "echo https://github.com/$TRAVIS_REPO_SLUG/tree/$TRAVIS_COMMIT > distribution/SOURCE_URL",
		"prerelease:version": "dot-json distribution/manifest.json version $TRAVIS_TAG"
	},
	"dependencies": {
		"copy-text-to-clipboard": "^2.1.0",
		"debounce-fn": "^3.0.1",
		"delegate-it": "^1.1.0-7",
		"dom-chef": "^3.6.0",
		"dom-loaded": "^1.2.0",
		"doma": "^1.0.3",
		"element-ready": "^3.1.0",
		"fit-textarea": "^1.1.0",
		"github-reserved-names": "^1.1.5",
		"indent-textarea": "^1.0.4",
		"insert-text-textarea": "^1.0.3",
		"intervalometer": "^1.0.5",
		"linkify-issues": "^2.0.0",
		"linkify-urls": "^3.1.0",
		"mem": "github:sindresorhus/mem#10f13c0",
		"onetime": "^5.1.0",
		"p-memoize": "^3.1.0",
		"select-dom": "^5.1.0",
		"shorten-repo-url": "^1.5.1",
		"tiny-version-compare": "^1.0.0",
		"type-fest": "^0.5.1",
		"webext-domain-permission-toggle": "^0.1.0",
		"webext-dynamic-content-scripts": "^5.0.2",
		"webext-options-sync": "^0.16.0",
		"webextension-polyfill": "^0.4.0"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^0.3.0",
		"@types/codemirror": "0.0.74",
		"@types/copy-webpack-plugin": "^5.0.0",
		"@types/debounce-fn": "^3.0.0",
		"@types/dom-loaded": "^1.0.1",
		"@types/element-ready": "^2.1.1",
		"@types/firefox-webext-browser": "^67.0.1",
		"@types/jsdom": "^12.2.3",
		"@types/mini-css-extract-plugin": "^0.2.0",
		"@types/react": "^16.8.18",
		"@types/terser-webpack-plugin": "^1.2.1",
		"@types/webpack": "^4.4.32",
		"@typescript-eslint/eslint-plugin": "^1.9.0",
		"ava": "^1.4.1",
		"chrome-webstore-upload-cli": "^1.2.0",
		"copy-webpack-plugin": "^5.0.3",
		"css-loader": "^2.1.1",
		"dot-json": "^1.1.0",
		"eslint": "^5.16.0",
		"eslint-config-xo-typescript": "^0.12.0",
		"jsdom": "^15.1.0",
		"mini-css-extract-plugin": "^0.6.0",
		"npm-run-all": "^4.1.5",
		"size-plugin": "^1.2.0",
		"stylelint": "^10.0.1",
		"stylelint-config-xo": "^0.15.0",
		"terser-webpack-plugin": "^1.3.0",
		"ts-loader": "^6.0.1",
		"ts-node": "^8.1.1",
		"typescript": "^3.4.5",
		"utc-version": "^1.1.0",
		"web-ext": "^3.0.0",
		"web-ext-submit": "^3.0.0",
		"webpack": "^4.32.2",
		"webpack-cli": "^3.3.2",
		"xo": "^0.24.0"
	},
	"xo": {
		"envs": [
			"browser"
		],
		"extensions": [
			"ts",
			"tsx"
		],
		"globals": [
			"browser"
		],
		"rules": {
			"import/no-unassigned-import": "off",
			"import/no-unresolved": "warn"
		},
		"overrides": [
			{
				"files": "**/*.+(ts|tsx)",
				"extends": "xo-typescript",
				"rules": {
					"@typescript-eslint/no-unused-vars": [
						"error",
						{
							"varsIgnorePattern": "^React$"
						}
					],
					"@typescript-eslint/restrict-plus-operands": "off",
					"@typescript-eslint/promise-function-async": "off"
				}
			}
		]
	},
	"ava": {
		"files": [
			"test/*.ts"
		],
		"babel": false,
		"compileEnhancements": false,
		"extensions": [
			"ts"
		],
		"require": [
			"ts-node/register"
		]
	},
	"stylelint": {
		"extends": "stylelint-config-xo",
		"rules": {
			"selector-type-no-unknown": null,
			"declaration-no-important": null,
			"property-no-vendor-prefix": null,
			"property-blacklist": null,
			"selector-class-pattern": null,
			"selector-id-pattern": null,
			"rule-empty-line-before": null,
			"at-rule-empty-line-before": null
		}
	},
	"engines": {
		"node": ">=10.0.0"
	}
}
