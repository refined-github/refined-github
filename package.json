{
  "scripts": {
    "test": "xo && ava && npm run build",
    "build:c": "rollup -c node:webext -i src/content.js -o extension/content.js",
    "build:b": "rollup -c node:webext -i src/background.js -o extension/background.js",
    "build:o": "rollup -c node:webext -i src/options/index.js -o extension/options/index.js",
    "build": "run-p build:*",
    "watch": "run-p --continue-on-error --silent 'build:* -- --watch'",
    "release": "webstore upload --source=extension --auto-publish"
  },
  "dependencies": {
    "copy-text-to-clipboard": "^1.0.0",
    "debounce-fn": "^1.0.0",
    "element-ready": "^2.0.0",
    "escape-goat": "^1.1.0",
    "github-injection": "^0.3.0",
    "to-semver": "^1.1.0",
    "webext-dynamic-content-scripts": "^2.0.1"
  },
  "devDependencies": {
    "ava": "*",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "chrome-webstore-upload-cli": "^1.0.0",
    "npm-run-all": "^4.0.2",
    "rollup": "^0.41.6",
    "rollup-config-webext": "^1.1.0",
    "rollup-watch": "^3.2.2",
    "xo": "*"
  },
  "xo": {
    "esnext": true,
    "envs": [
      "browser",
      "webextensions"
    ],
    "rules": {
      "import/no-unassigned-import": 0
    },
    "ignores": [
      "extension/**"
    ]
  },
  "ava": {
    "files": [
      "test/*.js"
    ],
    "source": [
      "extension/*.js"
    ],
    "require": [
      "babel-register"
    ]
  },
  "babel": {
    "plugins": [
      "transform-es2015-modules-commonjs"
    ]
  }
}
