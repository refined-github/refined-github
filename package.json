{
	"private": true,
	"scripts": {
		"ava": "rollup test/*.ts --plugin typescript --dir .built/test --chunkFileNames _.mjs --entryFileNames [name].mjs && ava",
		"build": "run-p build:* --continue-on-error",
		"build:parcel": "parcel build source/refined-github.ts source/background.ts source/options.html source/resolve-conflicts.ts source/icon.png source/manifest.json --no-cache --dist-dir distribution",
		"build:typescript": "tsc --noEmit",
		"fix": "run-p 'lint:* -- --fix'",
		"lint": "run-p lint:* --continue-on-error",
		"lint:css": "stylelint 'source/**/*.css'",
		"lint:js": "xo",
		"release": "VER=$(daily-version) run-s build version release:*",
		"release:amo": "web-ext-submit --source-dir distribution",
		"release:cws": "webstore upload --source=distribution --auto-publish",
		"start": "web-ext run --target=chromium",
		"start:firefox": "web-ext run",
		"test": "run-p ava lint:* build:*",
		"version": "dot-json distribution/manifest.json version $VER",
		"watch": "run-p watch:* --continue-on-error",
		"watch:parcel": "parcel watch source/refined-github.ts source/background.ts source/options.html source/resolve-conflicts.ts source/icon.png source/manifest.json",
		"watch:typescript": "tsc --noEmit --watch --preserveWatchOutput"
	},
	"browserslist": [
		"last 1 Chrome versions",
		"last 1 Firefox versions"
	],
	"stylelint": {
		"extends": "stylelint-config-xo",
		"rules": {
			"selector-type-no-unknown": null,
			"declaration-no-important": null,
			"selector-class-pattern": null,
			"selector-id-pattern": null,
			"selector-max-universal": null
		}
	},
	"ava": {
		"files": [
			".built/test/*.mjs"
		]
	},
	"dependencies": {
		"@primer/octicons-react": "^10.0.0",
		"copy-text-to-clipboard": "^2.2.0",
		"debounce-fn": "^4.0.0",
		"delay": "^4.4.0",
		"delegate-it": "^2.0.0",
		"dom-chef": "^4.2.2",
		"dom-loaded": "^2.0.0",
		"doma": "^3.0.1",
		"element-ready": "^4.1.1",
		"fit-textarea": "^2.0.0",
		"flat-zip": "^1.0.1",
		"github-reserved-names": "^2.0.0",
		"github-url-detection": "^4.0.0",
		"image-promise": "^7.0.1",
		"indent-textarea": "^2.0.2",
		"linkify-issues": "^2.0.0",
		"linkify-urls": "^3.1.0",
		"mem": "6.1.0",
		"onetime": "^5.1.2",
		"select-dom": "^6.0.2",
		"selector-observer": "^2.1.6",
		"shorten-repo-url": "^2.0.1",
		"strip-indent": "^3.0.0",
		"text-field-edit": "^3.1.0",
		"tiny-version-compare": "^3.0.1",
		"twas": "^2.1.1",
		"webext-base-css": "^1.2.0",
		"webext-domain-permission-toggle": "^1.0.1",
		"webext-dynamic-content-scripts": "^7.0.0",
		"webext-options-sync-per-domain": "^2.0.0",
		"webext-storage-cache": "^4.1.1",
		"webextension-polyfill": "^0.6.0",
		"zip-text-nodes": "^1.0.0"
	},
	"devDependencies": {
		"@ava/typescript": "^1.1.1",
		"@rollup/plugin-typescript": "^5.0.2",
		"@sindresorhus/tsconfig": "^0.7.0",
		"@types/chrome": "0.0.122",
		"@types/codemirror": "0.0.97",
		"@types/firefox-webext-browser": "^78.0.1",
		"@types/jsdom": "^16.2.3",
		"@types/react": "^16.9.46",
		"ava": "^3.12.1",
		"chrome-webstore-upload-cli": "^1.2.0",
		"daily-version": "^2.0.0",
		"dot-json": "^1.2.0",
		"eslint-config-xo-react": "^0.23.0",
		"eslint-plugin-react": "^7.20.6",
		"eslint-plugin-react-hooks": "^4.1.0",
		"jsdom": "^16.4.0",
		"npm-run-all": "^4.1.5",
		"parcel": "^2.0.0-nightly.416",
		"rollup": "^2.26.5",
		"stylelint": "^13.6.1",
		"stylelint-config-xo": "^0.19.0",
		"ts-node": "^9.0.0",
		"type-fest": "^0.16.0",
		"typescript": "^4.0.2",
		"web-ext": "^5.0.0",
		"web-ext-submit": "^5.0.2",
		"webpack": "^4.44.1",
		"webpack-cli": "^3.3.12",
		"xo": "^0.33.0"
	},
	"alias": {
		"octicon": "@primer/octicons-v2/build/svg",
		"react": "dom-chef"
	},
	"targets": {
		"default": {
			"publicUrl": "./"
		}
	},
	"webExt": {
		"sourceDir": "distribution",
		"run": {
			"keepProfileChanges": true,
			"firefoxProfile": "./test/web-ext-profile",
			"chromiumProfile": "./test/web-ext-profile",
			"startUrl": [
				"github.com"
			]
		}
	}
}
