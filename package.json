{
	"private": true,
	"type": "module",
	"scripts": {
		"vitest": "vitest --run",
		"build": "run-p build:* --continue-on-error",
		"build:parcel": "parcel build --dist-dir distribution --no-source-maps",
		"build:typescript": "tsc --noEmit",
		"fix": "run-p \"lint:* -- --fix\"",
		"lint": "run-p lint:* --continue-on-error",
		"lint:css": "stylelint \"source/**/*.css\"",
		"lint:js": "xo",
		"pack:safari": "xcodebuild -project 'safari/Refined GitHub.xcodeproj' -scheme 'Refined GitHub (macOS)'",
		"prepare:safari": "bash build/prepare-safari-release.sh",
		"test": "run-p vitest lint:* build:* test:features",
		"test:features": "tsx build/verify-features.ts",
		"watch": "run-p watch:* --continue-on-error",
		"watch:parcel": "parcel watch --dist-dir distribution",
		"watch:typescript": "tsc --noEmit --watch --preserveWatchOutput"
	},
	"stylelint": {
		"extends": "stylelint-config-xo",
		"rules": {
			"selector-type-no-unknown": null,
			"declaration-no-important": null,
			"selector-class-pattern": null,
			"selector-id-pattern": null,
			"selector-max-universal": null,
			"no-descending-specificity": null
		},
		"overrides": [
			{
				"files": [
					"source/refined-github.css",
					"source/features/github-bugs.css"
				],
				"rules": {
					"no-descending-specificity": null
				}
			}
		]
	},
	"dependencies": {
		"@cheap-glitch/mi-cron": "^1.0.1",
		"@primer/octicons-react": "^17.5.0",
		"@sindresorhus/to-milliseconds": "^2.0.0",
		"array-union": "^3.0.1",
		"batched-function": "^2.0.1",
		"code-tag": "^1.1.0",
		"debounce-fn": "^5.1.2",
		"delay": "^5.0.0",
		"delegate-it": "^6.0.1",
		"dom-chef": "^5.1.0",
		"dom-loaded": "^3.0.0",
		"doma": "^3.0.2",
		"element-ready": "^6.2.1",
		"filter-altered-clicks": "^2.0.0",
		"fit-textarea": "^2.0.0",
		"flat-zip": "^1.0.1",
		"github-url-detection": "^7.1.2",
		"image-promise": "^7.0.1",
		"indent-textarea": "^2.1.1",
		"js-abbreviation-number": "^1.4.0",
		"linkify-issues": "2.0.0-nolookbehind",
		"linkify-urls": "3.1.0-nolookbehind",
		"markdown-wasm": "^1.2.0",
		"mem": "^9.0.2",
		"one-event": "^3.0.0",
		"one-mutation": "^2.0.0",
		"onetime": "^6.0.0",
		"p-retry": "^5.1.2",
		"push-form": "^1.0.1",
		"regex-join": "^2.0.0",
		"select-dom": "^7.1.1",
		"shorten-repo-url": "^3.0.0",
		"strip-indent": "^4.0.0",
		"text-field-edit": "^3.1.9001",
		"tiny-version-compare": "^4.0.0",
		"ts-extras": "^0.11.0",
		"twas": "^2.1.3",
		"webext-base-css": "^1.4.3",
		"webext-detect-page": "^4.0.1",
		"webext-domain-permission-toggle": "^4.0.0-0",
		"webext-dynamic-content-scripts": "^9.2.0",
		"webext-options-sync-per-domain": "^4.0.0-0",
		"webext-storage-cache": "^6.0.0-2",
		"webextension-polyfill": "^0.10.0",
		"webextension-polyfill-global": "^0.0.0",
		"zip-text-nodes": "^1.0.0"
	},
	"devDependencies": {
		"@mischnic/parcel-namer-preserve-structure": "^0.2.0",
		"@parcel/config-webextension": "^2.8.3",
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/codemirror": "^5.60.7",
		"@types/firefox-webext-browser": "^109.0.0",
		"@types/jsdom": "^21.1.0",
		"@types/react": "^17.0.52",
		"daily-version": "^2.0.0",
		"dot-json": "^1.2.2",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"highlight.js": "^11.7.0",
		"jsdom": "^21.1.0",
		"npm-run-all": "^4.1.5",
		"parcel": "^2.8.3",
		"parcel-transformer-rgh": "file:build/parcel-transformer-rgh",
		"stylelint": "^15.0.0",
		"stylelint-config-xo": "^0.21.1",
		"tsx": "^3.12.7",
		"type-fest": "^3.5.7",
		"typed-query-selector": "^2.9.1",
		"typescript": "^4.9.5",
		"vitest": "^0.28.4",
		"xo": "^0.53.1"
	},
	"engines": {
		"node": ">= 16",
		"npm": ">= 7"
	},
	"alias": {
		"_TODO": "Drop after https://github.com/parcel-bundler/parcel/pull/8807",
		"react": "dom-chef",
		"mem": "./node_modules/mem/dist/index.js",
		"ts-extras": "./node_modules/ts-extras/distribution/index.js",
		"webext-additional-permissions": "./node_modules/webext-additional-permissions/index.js",
		"batched-function": "./node_modules/batched-function/dist/index.js"
	},
	"targets": {
		"main": false,
		"default": {
			"source": "manifest.json",
			"context": "browser"
		}
	},
	"webExt": {
		"sourceDir": "distribution",
		"run": {
			"keepProfileChanges": true,
			"firefoxProfile": "./test/web-ext-profile",
			"chromiumProfile": "./test/web-ext-profile",
			"startUrl": [
				"https://github.com/refined-github/refined-github/issues?q=is%3Aissue+is%3Aopen+sort%3Aupdated-desc"
			]
		}
	}
}
