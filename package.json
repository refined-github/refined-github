{
	"private": true,
	"scripts": {
		"ava": "TS_NODE_FILES=true ava",
		"build": "run-p build:* --continue-on-error",
		"build:typescript": "tsc --noEmit",
		"build:webpack": "webpack --mode=production",
		"fix": "run-p 'lint:* -- --fix'",
		"lint": "run-p lint:* --continue-on-error",
		"lint:css": "stylelint 'source/**/*.css'",
		"lint:js": "xo",
		"release": "VER=$(daily-version) run-s build version release:*",
		"release:amo": "web-ext-submit --source-dir distribution",
		"release:cws": "webstore upload --source=distribution --auto-publish",
		"start": "web-ext run --target=chromium",
		"start:firefox": "web-ext run",
		"test": "run-p ava lint:* build:*",
		"version": "dot-json distribution/manifest.json version $VER",
		"watch": "run-p watch:* --continue-on-error",
		"watch:typescript": "tsc --noEmit --watch --preserveWatchOutput",
		"watch:webpack": "webpack --mode=development --watch"
	},
	"stylelint": {
		"extends": "stylelint-config-xo",
		"rules": {
			"selector-type-no-unknown": null,
			"declaration-no-important": null,
			"property-no-vendor-prefix": null,
			"selector-class-pattern": null,
			"selector-id-pattern": null,
			"at-rule-empty-line-before": null
		}
	},
	"ava": {
		"extensions": [
			"ts"
		],
		"files": [
			"test/*.ts"
		],
		"require": [
			"esm",
			"ts-node/register"
		],
		"timeout": "30s"
	},
	"dependencies": {
		"@primer/octicons": "^9.6.0",
		"@primer/octicons-v2": "0.0.0-60ee16f",
		"copy-text-to-clipboard": "^2.2.0",
		"debounce-fn": "^4.0.0",
		"delay": "^4.3.0",
		"delegate-it": "^2.0.0",
		"dom-chef": "^4.1.0",
		"dom-loaded": "^2.0.0",
		"doma": "^3.0.1",
		"element-ready": "^4.1.1",
		"fit-textarea": "^2.0.0",
		"flat-zip": "^1.0.1",
		"github-reserved-names": "^1.1.8",
		"github-url-detection": "^1.1.5",
		"image-promise": "^7.0.0",
		"indent-textarea": "^2.0.1",
		"linkify-issues": "2.0.0-nolookbehind",
		"linkify-urls": "3.1.0-nolookbehind",
		"mem": "^6.0.1",
		"onetime": "^5.1.0",
		"select-dom": "^6.0.2",
		"shorten-repo-url": "^1.6.0",
		"strip-indent": "^3.0.0",
		"text-field-edit": "^3.1.0",
		"tiny-version-compare": "^2.0.0",
		"twas": "^2.1.1",
		"webext-base-css": "^1.1.0",
		"webext-domain-permission-toggle": "^1.0.1",
		"webext-dynamic-content-scripts": "^6.0.4",
		"webext-options-sync-per-domain": "^1.0.0",
		"webext-storage-cache": "^3.0.0",
		"webextension-polyfill": "^0.6.0",
		"zip-text-nodes": "^1.0.0"
	},
	"devDependencies": {
		"@ava/typescript": "^1.1.1",
		"@sindresorhus/tsconfig": "^0.7.0",
		"@types/chrome": "0.0.112",
		"@types/codemirror": "0.0.93",
		"@types/copy-webpack-plugin": "^5.0.1",
		"@types/firefox-webext-browser": "^70.0.1",
		"@types/jsdom": "^16.2.3",
		"@types/mini-css-extract-plugin": "^0.9.1",
		"@types/react": "^16.9.35",
		"@types/terser-webpack-plugin": "^2.2.0",
		"ava": "^3.8.2",
		"chrome-webstore-upload-cli": "^1.2.0",
		"copy-webpack-plugin": "^5.1.1",
		"css-loader": "^3.5.3",
		"daily-version": "^1.0.0",
		"dot-json": "^1.2.0",
		"eslint-config-xo-react": "^0.23.0",
		"eslint-plugin-react": "^7.20.0",
		"eslint-plugin-react-hooks": "^4.0.2",
		"esm": "^3.2.25",
		"jsdom": "^16.2.2",
		"mini-css-extract-plugin": "^0.9.0",
		"npm-run-all": "^4.1.5",
		"size-plugin": "^2.0.1",
		"string-replace-loader": "^2.3.0",
		"stylelint": "^13.4.1",
		"stylelint-config-xo": "^0.18.0",
		"terser-webpack-plugin": "^3.0.1",
		"ts-loader": "^7.0.4",
		"ts-node": "^8.10.1",
		"type-fest": "^0.13.1",
		"typescript": "^3.9.2",
		"web-ext": "^4.2.0",
		"web-ext-submit": "^4.2.0",
		"webpack": "^4.43.0",
		"webpack-cli": "^3.3.11",
		"xo": "^0.30.0"
	},
	"webExt": {
		"sourceDir": "distribution",
		"run": {
			"keepProfileChanges": true,
			"firefoxProfile": "./test/web-ext-profile",
			"chromiumProfile": "./test/web-ext-profile",
			"startUrl": [
				"github.com"
			]
		}
	}
}
