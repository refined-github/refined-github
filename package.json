{
	"private": true,
	"type": "module",
	"scripts": {
		"ava": "ava",
		"build": "run-p build:* --continue-on-error",
		"build:typescript": "tsc --noEmit",
		"build:webpack": "TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\"}' webpack --mode=production",
		"fix": "run-p 'lint:* -- --fix'",
		"lint": "run-p lint:* --continue-on-error",
		"lint:css": "stylelint 'source/**/*.css'",
		"lint:js": "xo",
		"pack:safari": "xcodebuild -project 'safari/Refined GitHub.xcodeproj'",
		"start": "web-ext run --target=chromium || echo 'Install it first: npm i -g web-ext'",
		"start:firefox": "web-ext run || echo 'Install it first: npm i -g web-ext'",
		"start:safari": "open 'safari/build/Release/Refined GitHub.app'",
		"test": "run-p ava lint:* build:*",
		"watch": "run-p watch:* --continue-on-error",
		"watch:typescript": "tsc --noEmit --watch --preserveWatchOutput",
		"watch:webpack": "TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\"}' webpack --mode=development --watch"
	},
	"stylelint": {
		"extends": "stylelint-config-xo",
		"rules": {
			"selector-type-no-unknown": null,
			"declaration-no-important": null,
			"selector-class-pattern": null,
			"selector-id-pattern": null,
			"selector-max-universal": null
		}
	},
	"ava": {
		"extensions": {
			"ts": "module"
		},
		"files": [
			"test/*.ts"
		],
		"nodeArguments": [
			"--loader=ts-node/esm",
			"--experimental-specifier-resolution=node"
		],
		"nonSemVerExperiments": {
			"configurableModuleFormat": true
		},
		"environmentVariables": {
			"TS_NODE_FILES": "true"
		}
	},
	"dependencies": {
		"@cheap-glitch/mi-cron": "^1.0.1",
		"@primer/octicons-react": "^12.0.0",
		"copy-text-to-clipboard": "^3.0.0",
		"debounce-fn": "^4.0.0",
		"delay": "^5.0.0",
		"delegate-it": "^2.0.2",
		"dom-chef": "^4.2.2",
		"dom-loaded": "^2.0.0",
		"doma": "^3.0.1",
		"element-ready": "^5.0.0",
		"fit-textarea": "^2.0.0",
		"flat-zip": "^1.0.1",
		"github-url-detection": "^4.8.0",
		"image-promise": "^7.0.1",
		"indent-textarea": "^2.0.3",
		"js-abbreviation-number": "^1.0.0",
		"linkify-issues": "2.0.0-nolookbehind",
		"linkify-urls": "3.1.0-nolookbehind",
		"mem": "^8.0.0",
		"one-event": "^3.0.0",
		"one-mutation": "^2.0.0",
		"onetime": "^5.1.2",
		"push-form": "^0.8.0",
		"regex-join": "^1.0.0",
		"select-dom": "^7.1.0",
		"selector-observer": "^2.1.6",
		"shorten-repo-url": "^2.1.0",
		"strip-indent": "^3.0.0",
		"text-field-edit": "^3.1.0",
		"tiny-version-compare": "^3.0.1",
		"twas": "^2.1.2",
		"webext-base-css": "^1.3.1",
		"webext-domain-permission-toggle": "^2.1.0",
		"webext-dynamic-content-scripts": "^7.1.0",
		"webext-options-sync-per-domain": "^2.0.2",
		"webext-storage-cache": "^4.2.0",
		"webextension-polyfill": "^0.7.0",
		"zip-text-nodes": "^1.0.0"
	},
	"devDependencies": {
		"@ava/typescript": "^1.1.1",
		"@rollup/plugin-typescript": "^8.1.1",
		"@sindresorhus/tsconfig": "^0.8.0",
		"@types/chrome": "^0.0.130",
		"@types/codemirror": "^0.0.108",
		"@types/copy-webpack-plugin": "^6.4.0",
		"@types/firefox-webext-browser": "^82.0.0",
		"@types/jsdom": "^16.2.6",
		"@types/mini-css-extract-plugin": "^1.2.2",
		"@types/react": "^17.0.2",
		"@types/resize-observer-browser": "^0.1.5",
		"@types/terser-webpack-plugin": "^5.0.2",
		"ava": "^3.15.0",
		"copy-webpack-plugin": "^7.0.0",
		"css-loader": "^5.0.2",
		"daily-version": "^2.0.0",
		"decamelize": "^5.0.0",
		"dot-json": "^1.2.1",
		"esbuild-loader": "^2.9.1",
		"eslint-config-xo-react": "^0.23.0",
		"eslint-plugin-react": "^7.22.0",
		"eslint-plugin-react-hooks": "^4.2.0",
		"jsdom": "^16.4.0",
		"markdown-wasm": "^1.1.2",
		"mini-css-extract-plugin": "^1.3.6",
		"npm-run-all": "^4.1.5",
		"rollup": "^2.39.0",
		"size-plugin": "^2.0.2",
		"string-replace-loader": "^3.0.1",
		"stylelint": "^13.10.0",
		"stylelint-config-xo": "^0.20.0",
		"terser-webpack-plugin": "^5.1.1",
		"ts-node": "^9.1.1",
		"tslib": "^2.1.0",
		"type-fest": "^0.21.1",
		"typed-query-selector": "^2.4.1",
		"typescript": "^4.1.5",
		"webpack": "^5.23.0",
		"webpack-cli": "^4.5.0",
		"xo": "^0.37.1"
	},
	"engines": {
		"node": ">= 15",
		"npm": ">= 7"
	},
	"webExt": {
		"sourceDir": "distribution",
		"run": {
			"keepProfileChanges": true,
			"firefoxProfile": "./test/web-ext-profile",
			"chromiumProfile": "./test/web-ext-profile",
			"startUrl": [
				"github.com"
			]
		}
	}
}
