{
	"extends": "@sindresorhus/tsconfig",
	"ts-node": {
		"moduleTypes": {
			"webpack.config.ts": "cjs"
		}
	},
	"compilerOptions": {
		"target": "es2020",
		"declaration": false,
		"esModuleInterop": true,
		"noUncheckedIndexedAccess": false,
		"noPropertyAccessFromIndexSignature": false
	},
	"include": [
		"source",
		"test",
		"build",
		"webpack.config.ts"
	]
}
