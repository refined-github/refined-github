{
	"extends": "@sindresorhus/tsconfig",
	"compilerOptions": {
		"target": "es2022",
		"module": "es2022",
		"moduleResolution": "Node",
		"moduleDetection": "legacy", // TODO: Drop After dropping Webpack
		"declaration": false,
		"esModuleInterop": true,
		"noUncheckedIndexedAccess": false,
		"noPropertyAccessFromIndexSignature": false,
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ES2022"
		],
	},
	"include": [
		"source",
		"test",
		"build",
		"webpack.config.ts"
	]
}
